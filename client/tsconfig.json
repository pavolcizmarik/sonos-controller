{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] },
    "module": "ESNext",
    "target": "ESNext",
    "types": ["vite/client"],
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "strict": true,
    "incremental": false,
    "skipLibCheck": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["DOM", "ESNext"],
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
